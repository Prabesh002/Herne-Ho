@model ClientModel

@{ 
    ViewData["Title"] = "Update Clients";
}


<form action="UpdateClient" method="post">

    <div class="mb-3">
        <label for="name" class="form-label">GUID</label>
        <input type="text" class="form-control" id="name" asp-for="ClientId" readonly>
    </div>
    <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <input type="text" class="form-control" id="name" asp-for="ClientName">
    </div>
    <div class="mb-3">
        <label for="name" class="form-label">Email</label>
        <input type="email" class="form-control" id="name" asp-for="ClientEmail">
    </div>

    <div class="mb-3">
        <label for="name" class="form-label">Phone</label>
        <input type="text" class="form-control" id="name" asp-for="CLientPhone">
    </div>

  

    <button type="submit" class="btn btn-primary">Submit</button>
</form>